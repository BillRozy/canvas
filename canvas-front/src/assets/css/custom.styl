input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
  -webkit-appearance none
  margin 0

input[type='number']
  -moz-appearance textfield

select
  -webkit-appearance none
  -moz-appearance none
  text-indent 1px
  text-overflow ''
  &::-ms-expand
    display none

input, textarea, select
  font-family 'Gilroy'

html
  min-height 100%
  height 100%
  min-width $min_width
  -webkit-transition background-color 1s
  transition background-color 1s
  overflow-y: auto;
  .loading
    background #FFF url('~assets/images/icons/rolling.gif') no-repeat 50% 50%
    background-size 30px
    -webkit-transition background-color 0s
    transition background-color 0s
    body
      opacity 0
      -webkit-transition opacity 0s
      transition opacity 0s

video
  width auto
  height auto
  max-height 100%

body
  min-height 100%
  width 100%
  height 100%
  margin 0
  font-family "Code Pro Light"
  min-width $min_width
  -webkit-transition opacity 1s
  transition opacity 1s
  overflow-y auto
  font-size $standard-font-size

section
  .page-wrapper
    transition 0.5s
    box-sizing border-box
    padding-top 20px
    width 100%
    min-height "calc(100% - %s)" % ($header-mini-height)
    min-width $min_width
    @media only screen and (min-height: 600px)
      min-height "calc(100% - %s)" % ($header-height)
      margin-bottom $footer_height;
      overflow-y auto;
    &:after
      content ""
      display block
      height $footer_height

.horizontal_flex
  display flex
  justify-content space-around
  align-items center
  align-content center

#photohome, #videohome
  background url('~assets/images/fon1part.png') repeat
  background-size cover
  overflow hidden

#videohome
  background url('~assets/images/fon2part.png') repeat
  background-size cover

h1
  text-align center
  font-size 3em
  font-weight 700
  -webkit-margin-before 0
  -webkit-margin-after 0
  text-align center

h2
  text-align center
  font-size 1em
  font-weight 500
  margin-bottom 0px

.whitestripe form
  margin 0
  width 80%

.active
  z-index 50

.slider-wrapper
  position relative
  max-width $screen-md-min
  min-width "calc(%s * 0.8)" % ($min_width)
  span
    position absolute
    width 200px
    font-size 1.4em
    display block
    text-align center
    left 50%
    top 10%
    margin-left -100px
  min-height 200px
  max-height 250px
  margin 0 auto
#slider, #slider2
  width calc(100% - 50px)
  max-width 800px

.slider-price-cell
  position absolute
  width 60px
  font-size 1.3em
  top 10%
  font-family "Code Pro Light"
  font-weight 700

.cell-min
  left 5%
  border none

.cell-max
  right 0%
  border none

