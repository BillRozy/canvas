.registration-box
  background-color rgb(62, 63, 66)
  border-radius 5px
  font-family 'Code Pro Light'
  padding 20px 0
  max-width 450px
  min-width 200px
  min-height 450px
  width 90%
  margin 0 auto
  font-weight 100
  filter drop-shadow(0px 0px 5px black)
  a
